<section class="py-5 text-center container">
  <div class="row">
    <div class="col-2">
      <a href="/elecciones" class="btn btn-warning">Volver</a>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">RESULTADOS DE LA ELECCION</h1>
    </div>
  </div>
</section>

{{#each puestos as |puesto|}}
<div class="row mx-3 mt-4">
  <div class="col-8 mx-auto">
    <div class="row">
      <div class="col-10 mx-auto">
        <h2 class="text-center">{{puesto.nombre}}</h2>
        <hr>
        <h6 class="text-center">{{puesto.totalVotos}} votos en total</h6>
      </div>
    </div>

    {{#each puesto.candidatos as |candidato|}}
    <div class="row my-3 bg-gray rounded-1">
      <div class="col-3 py-2">
        <div class="d-flex justify-content-center">
          <img src="{{candidato.imgUrl}}" class="img-fluid img-candidato my-0">
        </div>
        <h5 class="text-center">{{candidato.nombre}} {{candidato.apellido}}</h5>
      </div>
      <div class="col-9 px-4 py-5">
        <div class="p-1 d-flex loading-border mb-3">
          <div class="d-flex justify-content-center align-items-center loading-bar"
            style="width:{{candidato.porcentajeInt}}%;">
            {{#unless (menorQue candidato.porcentaje 30)}}
            <h4 class="color-gray">{{candidato.porcentaje}}%</h4>
            {{/unless}}
          </div>

          {{#if (menorQue candidato.porcentaje 30)}}
          <div class="ps-3 d-flex align-items-center loading-bar2" style="width:{{candidato.porcentajeRestante}}%;">
            <h4 class="color-bluegreen">{{candidato.porcentaje}}%</h4>
          </div>
          {{/if}}
        </div>
        <div class="d-flex align-items-end votos-text">
          <h4 class="m-0 p-0 mb-2 color-bluegreen">{{candidato.votos}} votos</h4>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>

{{/each}}

<link rel="stylesheet" href="/assets/css/resultados.css">