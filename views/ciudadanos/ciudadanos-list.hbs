<section class="py-5 text-center container">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">MANTENIMIENTO DE CIUDADANOS</h1>
            <p>
                {{#unless isEleccion}}
                <a href="/create-ciudadanos" class="btn btn-outline-secondary">AÃ±adir nuevo
                    Ciudadano</a>
                {{/unless}}
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">

            {{#if hasCiudadanos}}

            <div class="container-fluid d-flex flex-column align-items-center justify-content-center mb-3">
                <table class="table table-dark table-striped w-100">
                    <thead>
                        <tr>
                            <th class="text-center">Cedula</th>
                            <th class="text-center">Nombre y Apellido</th>
                            <th class="text-center">Correo <i class="far fa-envelope"></i></th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acciones <i class="fas fa-cog"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ciudadanos as |ciudadano|}}
                        <tr>
                            <td class="text-center">{{ciudadano.cedula}}</td>
                            <td class="text-center">{{ciudadano.nombre}} {{ciudadano.apellido}}</td>
                            <td class="text-center">{{ciudadano.email}}</td>
                            <td class="text-center">{{#if ciudadano.estado}}Activo <i class="fas fa-check"
                                    style="color: #00bb2d;"></i>{{else}}Inactivo <i class="fas fa-times-circle"
                                    style="color: #f80000;"></i>{{/if}}</td>
                            <td class="text-center">
                                <a href="/edit-ciudadano/{{ciudadano.id}}/?edit=true"
                                    class="btn btn-outline-success text-center">Editar <i class="fas fa-edit"></i></a>
                                <a href="/confirm-delete-ciudadano/{{ciudadano.id}}"
                                    class="btn btn-outline-danger text-center">Eliminar <i
                                        class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{else}}

            <h1>No hay Ciudadanos creados</h1>

            {{/if}}

        </div>
    </div>
</div>